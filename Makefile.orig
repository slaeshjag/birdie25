all: $(SUBDIRS)
	@echo " [ LD ] bin/$(BINFILE)"
	@$(CC) -o bin/$(BINFILE) $(CFLAGS) $(LIBS) $(LDFLAGS)
	@echo "Build complete."
	@echo 

bin:
	@echo " [INIT] bin/"
	@$(MKDIR) bin/

clean: $(SUBDIRS)
	@echo " [ RM ] bin/"
	@$(RMDIR) bin/
	@echo
	@echo "Source tree cleaned."
	@echo

